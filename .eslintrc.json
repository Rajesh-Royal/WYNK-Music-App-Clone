{
  "extends": [
    "react-app",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["error", "double"],
    "jsx-a11y/anchor-is-valid": [
      "off",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "crlf",
        "printWidth": 80,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "usePrettierrc": false
      }
    ]
  }
}
